{% extends 'layout/layout1.twig' %}

{% block content %}

<section class="main">
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<div class="row">
					<h1>{{ translate('Logs') }}</h1>

					<a class="btn" href="{{ url('netglue_log/by-day') }}" title="Today's logs in full">Today's Logs</a>

					<div class="btn-group">
						<a class="btn btn-danger dropdown-toggle" data-toggle="dropdown" href="#" title="Delete old logs">
							Delete logs
							<span class="caret"></span>
						</a>
						<ul class="dropdown-menu">
							<li><a href="{{ url('netglue_log/delete-aged', {'days' : 60}) }}">Older than 60 days</a></li>
							<li><a href="{{ url('netglue_log/delete-aged', {'days' : 30}) }}">Older than 30 days</a></li>
							<li><a href="{{ url('netglue_log/delete-aged', {'days' : 7}) }}">Older than 7 days</a></li>
							<li class="divider"></li>
							<li><a href="{{ url('netglue_log/empty') }}">Delete All</a></li>
						</ul>
					</div>
				</div>
				<div class="row">
					{# include '/netglue-log/log/_flash.twig'  #}
					{% include '/netglue-log/log/log-table.twig' with {'records' : records} %}

				</div>
			</div>
		</div>
	</div>
</section>

{% endblock content %}