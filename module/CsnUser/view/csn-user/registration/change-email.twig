{% extends 'layout/layout.twig' %}

{% block content %}

<div class="jumbotron">
  <h2>{{ translate('Change Email') }}</h2>
    <div class="container" id="wrap">
	  <div class="row">
        <div class="col-md-6 col-md-offset-3">
			{{ form().openTag(form) | raw }}
            <div class="row">
              <div class="col-sm-12"> 
                {{ message }}     
              </div>
            </div>
            <input type="password" autocomplete="off" value="" 
				   placeholder="{{ translate('Current Password') }}" 
				   class="form-control input-lg" required="required" name="password">
			{{ formElementErrors(form.get('password'))| raw }}
			{{ formElement(form.get('newEmail'))| raw }}
			{{ formElementErrors(form.get('newEmail'))| raw }}
			{{ formElement(form.get('newEmailVerify'))| raw }}
			{{ formElementErrors(form.get('newEmailVerify'))| raw }}
            <div class="row">
              <div class="col-sm-12"> 
               {{ formRow(form.get('submit'))| raw }}             
              </div>
            </div>
            {{ formElement(form.get('csrf'))| raw }}
				{{ form().closeTag(form) | raw}}        
        </div>
      </div>            
    </div>
</div>
{% endblock content %}
