{% extends 'layout/layout1.twig' %}

{% block content %}
<section class="main">
	<div class="container">
		<div class="row">
			<div class="col-md-9">
				<div class="profile">
					<div class="profile-header ">
						<div class="profile-photo profile-photo-free">
							<img src="/img/photo.jpg" alt="">
						</div>
						<div class="btn-group profile-status">
							<button class="btn {{ user.employment.class}} btn-xs profile-status-btn dropdown-toggle" type="button" data-toggle="dropdown">
								{{ user.employment.employment}} <span class="caret"></span>
							</button>
							<ul class="dropdown-menu">
								{% for employment in employments %}
									{% if employment.employment != user.employment.employment %}
										<li class="{{ employment.class}}">{{employment.employment}}</li>
									{% endif %}
								{% endfor %}
							</ul>
						</div>
						<div class="profile-header-info">
							<h1><span>{{ user.firstName}}</span>
								<span>{{ user.lastName}}</span>
								<small>{{ user.qualification}}</small>
							</h1>
						</div>


						<div class="profile-header-contacts">
							<a {% if user.contactInfo.FacebookUrl %}href="{{user.contactInfo.FacebookUrl}}" class="contacts-item"
							{% else %} class="contacts-item contacts-item-disabled"
							{% endif %}><i class="icon-circle icon-main-color-in fi-facebook"></i></a>
							<a {% if user.contactInfo.TwitterUrl %}href="{{user.contactInfo.TwitterUrl}}" class="contacts-item"
							{% else %} class="contacts-item contacts-item-disabled"
							{% endif %}><i class="icon-circle icon-main-color-in fi-twitter"></i></a>
							<a {% if user.contactInfo.LinkedInUrl %}href="{{user.contactInfo.LinkedInUrl}}" class="contacts-item"
							{% else %} class="contacts-item contacts-item-disabled"
							{% endif %}><i class="icon-circle icon-main-color-in fi-linkedin"></i></a>
							<a {% if user.contactInfo.email %}href="mailto:{{user.contactInfo.email}}" class="contacts-item"
							{% else %} class="contacts-item contacts-item-disabled"
							{% endif %}><i class="icon-circle icon-main-color-in fi-mail"></i></a>

							{% if user.contactInfo.phone %}<div class="profile-header-phone"><i class="fi-phone1"></i>{{ user.contactInfo.phone }}</div>{% endif %}
							{% if user.contactInfo.phone %}<div class="profile-header-phone"><i class="fi-phone2"></i>{{ user.contactInfo.phone }}</div>{% endif %}
							{% if user.contactInfo.skype %}<div class="profile-header-skype"><i class="fi-skype"></i>{{user.contactInfo.skype}}</div>{% endif %}
						</div>
						<a href="/user/register/edit-profile" class="icon-edit"><i class="icon-square icon-gray fi-pencil"></i></a>
					</div>
					<ul class="nav nav-tabs profile-tabs">
					 	{% if user.contactInfo %}<li class="active"><a href="#personal"  data-toggle="tab">Особиста інформація</a></li>{% endif %}
						<li><a href="#projects" data-toggle="tab">Проекти</a></li>
					</ul>

					<div class="tab-content profile-tabs-content">
						{% if user.contactInfo %}
							<div class="tab-pane active" id="personal">
								<div class="row">
									<div class="col-md-6">
										<dl class="profile-info">
											<dt class="profile-title profile-title-left">Cпеціальність:</dt>
											<dd class="profile-text">{{ user.qualification }}</dd>
											<dt class="profile-title profile-title-left">Cтаж роботи:</dt>
											<dd class="profile-text">5 років</dd>
										</dl>
									</div>
									<div class="col-md-6">
										<dl class="profile-info">
											<dt class="profile-title profile-title-left">Дата народження:</dt>
											<dd class="profile-text">{{ user.privateInfo.birthDay|date("d.m.Y") }} / 30 років</dd>
											<dt class="profile-title profile-title-left">Місцезнаходження:</dt>
											<dd class="profile-text">{{ user.privateInfo.location}}</dd>
										</dl>
									</div>
								</div>
								{% if user.tags|length > 0 %}
									<dl class="profile-info">
										<dt class="profile-title">Професійні навики: </dt>
										<dd class="profile-tags">
											{% for tag in user.tags %}
												<span>{{ tag.tag }}</span>
											{% endfor %}
										</dd>
									</dl>
								{% endif %}
								{% if user.privateInfo  %}
									<div class="profile-text">
										{{ user.privateInfo.resume|raw}}
									</div>
								{% endif %}

							</div>
						{% endif %}
						<div class="tab-pane " id="projects">
							<div class="profile-info">
								<h3 class="profile-title"><a href="">MediaPlazm 2</a><span class="profile-role">учасник</span></h3>
								<p class="profile-text profile-date">7.06.2014 - 15.11.2014</p>
								<p class="profile-text">Дуже задоволений роботою Кості. Завжди креативно підійде до вирішення завдання і підкаже як краще зробити;) Рекомендую!</p>

								<p class="profile-tags profile-tags_project">
									<span>копірайтинг</span>
									<span>pr-тексти</span>
									<span>ведення груп в соц.мережах</span>
								</p>
							</div>

							<div class="profile-info">
								<h3 class="profile-title"><a href="">MediaPlazm</a><span class="profile-role">учасник</span></h3>
								<p class="profile-text profile-date">7.06.2014 - 15.11.2014</p>
								<p class="profile-text">Дуже задоволений роботою Кості. Завжди креативно підійде до вирішення завдання і підкаже як краще зробити;) Рекомендую!</p>
								<p class="profile-tags profile-tags_project">
									<span>копірайтинг</span>
									<span>pr-тексти</span>
									<span>ведення груп в соц.мережах</span>
								</p>
							</div>

							{% for offer in user.offers %}
								<span>{{ offer.resume }}</span>
								<p>{{ offer.project.header }}</p>
									<p class="profile-tags  profile-tags_project">
										{% for tag in offer.tags %}
											<span>{{ tag.tag }}</span>
										{% endfor %}
									</p>
							{% endfor %}
						</div>
					</div>
				</div>
			</div>
			<div class="col-md-3">
				<img src="/img/banner.jpg" alt="">
			</div>
		</div>
	</div>
</section>

{% endblock content %}