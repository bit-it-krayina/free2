{% extends 'layout/layout.twig' %}


{% block content %}
<div class="jumbotron">
  <h2>{{ translate('Change Security Question') }}</h2>
    <div class="container" id="wrap">
	  <div class="row">
        <div class="col-md-6 col-md-offset-3">
          {{ form().openTag(form) | raw }}
            <div class="row">
              <div class="col-sm-12"> 
                {{ message }}     
              </div>
            </div>
            <input type="password" autocomplete="off" value="" 
				   placeholder="{{ translate('Current Password') }}" 
				   class="form-control input-lg" required="required" name="password">
  
			{{ formElementErrors(form.get('password')) }}
			{{ formElement(form.get('question').setAttributes({'value' : questionSelectedId}) )}}
			{{ formElementErrors(form.get('question')) }}
            <input type="text" autocomplete="off" value=""
				   placeholder="{{ translate('Security Answer') }}" 
				   class="form-control input-lg" required="required" name="answer">

			{{ formElementErrors(form.get('answer')) }}
            <div class="row">
              <div class="col-sm-12"> 
                {{ formRow(form.get('submit'))| raw }}              
              </div>
            </div>
            {{ formElement(form.get('csrf'))| raw }}
				{{ form().closeTag(form) | raw}}         
        </div>
      </div>            
    </div>
</div>
{% endblock content %}
