{% extends 'layout/layout.twig' %}

{% block content %}
<div class="jumbotron">
  <h2>{{ translate('Reset Password')}}</h2>
    <div class="container" id="wrap">
	  <div class="row">
        <div class="col-md-6 col-md-offset-3">
          {{ form().openTag(form) | raw }}
            <div class="row">
              <div class="col-sm-12"> 
                {{ message }}      
              </div>
            </div>
				{{ formElement(form.get('usernameOrEmail'))| raw }}
				{{ formElementErrors(form.get('usernameOrEmail'))| raw }}
            <div class="row">
              <div class="col-sm-12"> 
                {{ formRow(form.get('submit'))| raw }}            
              </div>
            </div>
            {{ formElement(form.get('csrf'))| raw }}
			{{ form().closeTag(form) | raw}}        
        </div>
      </div>            
    </div>
</div>
{% endblock content %}
